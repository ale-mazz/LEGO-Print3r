<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".CalibrationActivity">

    <TextView
        android:id="@+id/calibInstructions"
        android:layout_width="351dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="heroregular"
        android:text="@string/XYcalibration"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/arrowUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/arrowUp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:drawableTop="@drawable/ic_keyboard_arrow_up_black_24dp"
        app:layout_constraintBottom_toTopOf="@id/dotButton"
        app:layout_constraintTop_toBottomOf="@id/calibInstructions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/arrowLeft"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:drawableStart="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/arrowDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrowUp"
        app:layout_constraintVertical_bias="0.508" />

    <Button
        android:id="@+id/arrowRight"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="7dp"
        android:background="@color/colorPrimary"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/arrowDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrowUp"
        app:layout_constraintVertical_bias="0.508" />

    <Button
        android:id="@+id/arrowDown"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sheetCalibration"
        app:layout_constraintTop_toBottomOf="@id/dotButton"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="379dp" />

    <TextView
        android:id="@+id/sheetCalibration"
        android:layout_width="165dp"
        android:layout_height="149dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sheetcalibration"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="heroregular"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrowDown"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/dotButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        android:text="@string/punto"
        android:fontFamily="punto"
        app:layout_constraintBottom_toTopOf="@id/arrowDown"
        app:layout_constraintEnd_toStartOf="@+id/arrowRight"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/arrowLeft"
        app:layout_constraintTop_toBottomOf="@id/arrowUp"
        app:layout_constraintVertical_bias="0.482" />

</android.support.constraint.ConstraintLayout>