<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothErrorActivity">

    <ImageView
        android:id="@+id/alertImageView"
        android:layout_width="276dp"
        android:layout_height="301dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/alertTextBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561"
        app:srcCompat="@mipmap/alert_logo"
        tools:layout_editor_absoluteX="67dp" />

    <TextView
        android:id="@+id/alertTextBox"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginBottom="40dp"
        android:text="Nessuna connessione Bluetooth rilevata. Si prega di attivare il Bluetooth dalle impostazioni del dispositivo"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/exitButton"
        tools:layout_editor_absoluteX="60dp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="Esci"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="161dp" />
</android.support.constraint.ConstraintLayout>